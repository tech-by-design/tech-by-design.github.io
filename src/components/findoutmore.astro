---
import TechBdHub from '../assets/tech-by-design/techbd-hub.png'
import Fusion from '../assets/tech-by-design/techbd-fusion.png'
import DocumentsSvg from '../assets/tech-by-design/techbd-docs.png'

const callouts = [
  {
    name: 'Fusion',
    description:
      'A statewide collaborative effort to share services across QEs to gain efficiency in medical record interoperability.',
    imageSrc: Fusion.src,
    imageAlt: 'Tech by Design Fusion',
    href: '/fusion'
  },
  {
    name: 'Hub',
    description: 'Observability and traceability user interface built in conjunction with 1115 Waiver objectives',
    imageSrc: TechBdHub.src,
    imageAlt: 'Tech by Design Hub',
    href: '/hub'
  },
  {
    name: 'Docs',
    description: 'We strive to build as much in the open as we can, so check out our documentation pages to find more',
    imageSrc: DocumentsSvg.src,
    imageAlt: 'Tech by Design Docs',
    href: '/doc/introduction'
  }
]
---

<div class='bg-spruce'>
  <div class='mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'>
    <div class='mx-auto max-w-2xl py-16 sm:py-24 lg:max-w-none lg:py-32'>
      <h2 class='text-4xl font-extrabold text-orange'>More Info</h2>
      <div class='mt-6 space-y-12 lg:grid lg:grid-cols-3 lg:gap-x-6 lg:space-y-0'>
        {
          callouts.map((callout) => (
            <div class='group relative'>
              <div class='relative h-80 w-full overflow-hidden rounded-lg bg-neutral sm:aspect-h-1 sm:aspect-w-2 lg:aspect-h-1 lg:aspect-w-1 group-hover:opacity-75 dark:bg-spruce sm:h-64'>
                <img
                  src={callout.imageSrc}
                  alt={callout.imageAlt}
                  class='h-full w-full object-contain object-center p-2'
                  loading='lazy'
                />
              </div>
              <h3 class='mt-6 text-3xl text-neutral dark:text-orange-500'>
                <a href={callout.href}>
                  <span class='absolute inset-0' />
                  {callout.name}
                </a>
              </h3>
              <p class='text-base text-orange-200 dark:text-neutral-100'>{callout.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
